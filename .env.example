# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key
VITE_SUPABASE_PROJECT_ID=your_supabase_project_id

# Payment Provider (Choose one based on your region)
# For South Africa: Yoco (Recommended), PayFast, or Ozow
# For Africa: Paystack or Flutterwave
# For Global: Stripe

# Yoco (Recommended for South Africa)
VITE_YOCO_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
YOCO_SECRET_KEY=sk_test_xxxxxxxxxxxxx
YOCO_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Paystack (Recommended for Nigeria, Ghana, Kenya)
VITE_PAYSTACK_PUBLIC_KEY=your_paystack_public_key
PAYSTACK_SECRET_KEY=your_paystack_secret_key

# Flutterwave (Alternative for Africa)
VITE_FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key

# Stripe (For regions where available)
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# KYC Provider (Choose one)
# Jumio (Recommended for emerging markets)
JUMIO_API_TOKEN=your_jumio_api_token
JUMIO_API_SECRET=your_jumio_api_secret

# Onfido (Alternative)
ONFIDO_API_TOKEN=your_onfido_api_token

# Live Streaming APIs
# YouTube
VITE_YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_WEBHOOK_SECRET=your_youtube_webhook_secret

# TikTok (Requires app approval)
VITE_TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_APP_SECRET=your_tiktok_app_secret
TIKTOK_WEBHOOK_SECRET=your_tiktok_webhook_secret

# Instagram (Meta Platform)
VITE_INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Application Settings
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:54321

# Platform Configuration
VITE_PLATFORM_FEE_PERCENTAGE=10
VITE_MIN_BET_AMOUNT=1
VITE_MAX_BET_AMOUNT=10000
VITE_MIN_WITHDRAWAL_AMOUNT=10

# SMS Service (for challenge invites)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+27xxxxxxxxxx

# Email Service (for challenge invites)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@betcha.com

# Feature Flags
VITE_ENABLE_LIVE_STREAMING=false
VITE_ENABLE_TEAM_BETS=true
VITE_ENABLE_STREAM_BETTING=false
VITE_ENABLE_SMS_INVITES=true
VITE_ENABLE_EMAIL_INVITES=true
VITE_ENABLE_GROUP_BETTING=true
VITE_ENABLE_TEAM_CHALLENGES=true
VITE_ENABLE_CONTACTS_IMPORT=true

# Development/Testing
VITE_USE_PAYMENT_SANDBOX=true
VITE_ENABLE_DEBUG_MODE=false
